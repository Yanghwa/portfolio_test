<% include ./header_ex.ejs %>
<section id="blog" class="blog section">
    <div class="container">
        <div class="blog-inner">
            <h2 class="title text-center">My Blog</h2>
            <div class="row">
                <div class="box">
                <!--show the blog content connecting MongoDB -->
                    <% for (var i = 0; i < blogpost.length; i++) { %>
                        <div class="col-lg-12 text-center">
                            <img class="img-responsive img-border img-full center-block" src="./images/dreams-preview.png" alt="">
                            
                            <h3>
                                <%= blogpost[i].title %>
                                <br>
                                <small><%= blogpost[i].date %></small>
                            </h3>
                            <%= blogpost[i].content %>
                            
                            <a href="#" class="btn btn-default btn-lg">Read More</a>
                            <hr>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<% include footer.ejs %>
    <!-- /.container -->